<div class="container text-center mt-4">
  <h1 class="mb-4">Welcome to the Dog Collection</h1>

  <p class="lead mb-5">
    Explore a collection of adorable dogs, their loving owners, and unique breeds!
  </p>

  <!-- Navigation Links -->
  <div class="mb-4">
    <%= link_to "About", about_path, class: "btn btn-outline-primary mx-2" %>
    <%= link_to "Owners", owners_path, class: "btn btn-outline-primary mx-2" %>
    <%= link_to "Dogs", dogs_path, class: "btn btn-outline-primary mx-2" %>
    <%= link_to "Breeds", breeds_path, class: "btn btn-outline-primary mx-2" %>
  </div>

  <!-- Latest Dogs Section -->
  <h2 class="mt-5 mb-3">Latest Dogs Added</h2>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @dogs.limit(6).each do |dog| %>
      <div class="col">
        <div class="card h-100">
          <% if dog.image_url.present? %>
            <%= image_tag dog.image_url, alt: "#{dog.name} the #{dog.breed.name}", class: "card-img-top" %>
          <% else %>
            <%= image_tag "https://placehold.co/300x200?text=No+Image", class: "card-img-top" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to dog.name, dog_path(dog), class: "text-decoration-none text-dark" %>
            </h5>
            <p class="card-text">
              <strong>Breed:</strong> <%= dog.breed.name if dog.breed %><br>
              <strong>Owner:</strong> <%= "#{dog.owner.first_name} #{dog.owner.last_name}" if dog.owner %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

