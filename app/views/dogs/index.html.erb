<h1 class="mb-4">All Dogs</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @dogs.each do |dog| %>
    <div class="col">
      <div class="card h-100">
        <% if dog.image_url.present? %>
          <%= image_tag dog.image_url, alt: "#{dog.name} the #{dog.breed.name}", class: "card-img-top" %>
        <% else %>
          <%= image_tag "https://placehold.co/300x200?text=No+Image", class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to dog.name, dog_path(dog) %></h5>
          <p class="card-text">
            <strong>Breed:</strong> <%= dog.breed&.name || "Unknown" %><br>
            <strong>Owner:</strong> <%= "#{dog.owner&.first_name} #{dog.owner&.last_name}" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class= "pagination">
<%= paginate @dogs %>
</div>
