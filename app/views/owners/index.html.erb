<style>
body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #fef6f5;
  color: #333;
  line-height: 1.6;
  padding: 1rem;
}

.card-title a {
  text-decoration: none;
  color: inherit;
}
</style>

<h1 class="mb-4">Owners</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @owners.each do |owner| %>
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= link_to "#{owner.first_name} #{owner.last_name}", owner_path(owner) %></h5>
          <p class="card-text">
            <strong>Email:</strong> <%= owner.email %><br>
            <strong>Address:</strong> <%= owner.address %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>

